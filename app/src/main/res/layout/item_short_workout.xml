<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:layout_marginTop="@dimen/padding_10"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/short_workout_image_card"
        android:layout_width="@dimen/padding_150"
        android:layout_height="@dimen/padding_150"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardPreventCornerOverlap="false"
        android:padding="1dp"
        android:foreground="@color/black_transparent_for_img"
        >
        <ImageView
            android:id="@+id/short_workout_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/header_nav_menu"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:focusable="true"
            android:contentDescription="@string/workout_image" />

    </androidx.cardview.widget.CardView>
    <TextView
        android:translationZ="2dp"
        android:id="@+id/short_workout_name"
        android:layout_height="wrap_content"
        android:layout_width="180dp"
        android:layout_marginStart="5dp"
        tools:text="Название"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/short_workout_image_card"
        app:layout_constraintTop_toTopOf="@id/short_workout_image_card"
        android:layout_marginEnd="@dimen/padding_10"
        />
    <TextView
        android:translationZ="2dp"
        android:id="@+id/short_workout_category"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:text="Категория"
        android:textSize="@dimen/text_size_15"
        android:textStyle="italic"
        android:layout_marginEnd="@dimen/padding_5"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/short_workout_image_card"
        app:layout_constraintTop_toBottomOf="@id/short_workout_name"
        />
    <TextView
        android:translationZ="2dp"
        android:id="@+id/short_workout_sport"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:text="Вид спорта"
        android:layout_marginStart="@dimen/padding_5"
        android:textSize="@dimen/text_size_15"
        android:textStyle="italic"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/short_workout_image_card"
        app:layout_constraintBottom_toTopOf="@id/short_workout_duration_icon"

        />
    <ImageView
        android:translationZ="2dp"
        android:id="@+id/short_workout_duration_icon"
        android:layout_width="@dimen/dimens_24dp"
        android:layout_height="@dimen/dimens_24dp"
        app:layout_constraintStart_toStartOf="@id/short_workout_image_card"
        app:layout_constraintBottom_toBottomOf="@id/short_workout_image_card"
        app:layout_constraintEnd_toStartOf="@id/short_workout_duration"
        android:layout_marginStart="@dimen/padding_10"
        android:src="@drawable/ic_baseline_alarm_white_24"
        android:contentDescription="@string/workout_duration"
        />
    <TextView
        android:translationZ="2dp"
        android:id="@+id/short_workout_duration"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        tools:text="40 минут"
        android:textSize="@dimen/text_size_13"
        app:layout_constraintStart_toEndOf="@id/short_workout_duration_icon"
        app:layout_constraintBottom_toBottomOf="@id/short_workout_image_card"
        android:layout_marginStart="@dimen/dimens_8dp"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/short_workout_star"
        android:layout_width="@dimen/dimens_24dp"
        android:layout_height="@dimen/dimens_24dp"
        app:layout_constraintTop_toBottomOf="@id/short_workout_image_card"
        app:layout_constraintEnd_toEndOf="@id/short_workout_image_card"
        android:src="@drawable/ic_baseline_star_theme_color_24"
        android:contentDescription="@string/workout_rank" />
    <TextView
        android:id="@+id/rank_number"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:text="9.8"
        android:textSize="@dimen/text_size_13"
        app:layout_constraintEnd_toStartOf="@id/short_workout_star"
        app:layout_constraintBottom_toBottomOf="@id/short_workout_star"
        app:layout_constraintTop_toTopOf="@id/short_workout_star"
        android:layout_marginStart="@dimen/dimens_8dp"
        android:textColor="@color/design_default_color_secondary_variant"
        />
    <TextView
        android:id="@+id/downloads_number"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:text="123"
        android:textSize="@dimen/text_size_13"
        app:layout_constraintStart_toEndOf="@id/short_workout_downloads"
        app:layout_constraintTop_toTopOf="@id/short_workout_downloads"
        app:layout_constraintBottom_toBottomOf="@id/short_workout_downloads"
        android:layout_marginStart="@dimen/dimens_8dp"
        android:textColor="@color/design_default_color_secondary_variant"
        />
    <ImageView
        android:id="@+id/short_workout_downloads"
        android:layout_width="@dimen/dimens_24dp"
        android:layout_height="@dimen/dimens_24dp"
        app:layout_constraintTop_toBottomOf="@id/short_workout_image_card"
        app:layout_constraintStart_toStartOf="@id/short_workout_image_card"
        android:src="@drawable/ic_baseline_group_theme_24"
        android:contentDescription="@string/workout_downloads" />
</androidx.constraintlayout.widget.ConstraintLayout>