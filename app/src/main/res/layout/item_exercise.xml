<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_72dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_exercise_category_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/exercise_background"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="@dimen/dimens_8dp"
        android:contentDescription="@string/exercise_icon"
        android:layout_marginStart="@dimen/dimens_16dp"
        android:translationZ="3dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/custom_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/icon"
        app:layout_constraintEnd_toEndOf="@id/icon"
        app:backgroundTint="@color/white"
        android:tint="@color/white"
        app:borderWidth="2dp"
        app:fabCustomSize="28dp"
        app:srcCompat="@drawable/ic_baseline_check_12"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_20"
        tools:text="Sample title"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/description"
        android:layout_margin="@dimen/dimens_8dp"
        android:translationZ="3dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_14"
        tools:text="Sample description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginHorizontal="@dimen/dimens_8dp"
        android:translationZ="3dp"
        android:textColor="@color/black"
        />

<!--    TODO: MaterialCardView     -->
    <androidx.cardview.widget.CardView
        android:id="@+id/superset_background"
        android:layout_width="86dp"
        android:layout_height="42dp"
        app:cardBackgroundColor="@color/periwinkle"
        app:cardCornerRadius="@dimen/dimens_16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
        <androidx.cardview.widget.CardView
            android:id="@+id/superset_counter_background"
            android:layout_width="48dp"
            android:layout_height="30dp"
            android:layout_marginEnd="@dimen/dimens_24dp"
            app:cardCornerRadius="@dimen/dimens_8dp"
            app:layout_constraintTop_toTopOf="@id/superset_background"
            app:layout_constraintBottom_toBottomOf="@id/superset_background"
            app:layout_constraintStart_toStartOf="@id/superset_background"
            app:layout_constraintEnd_toEndOf="@id/superset_background"
            android:labelFor="@id/superset_counter"
            >
            <EditText
                android:id="@+id/superset_counter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/white"
                android:text="1111"
                android:textAlignment="center"
                android:inputType="numberDecimal"
                android:importantForAutofill="no"
                />
        </androidx.cardview.widget.CardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/exercise_background"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/periwinkle"
        app:cardCornerRadius="@dimen/dimens_16dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/superset_counter_background"
        app:layout_constraintEnd_toEndOf="parent"
        android:labelFor="@id/superset_counter"
        android:theme="@style/AppTheme"
        >
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>