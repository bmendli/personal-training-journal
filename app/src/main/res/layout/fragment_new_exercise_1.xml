<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimens_16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/enter_exercise_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/enter_exercise_name"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_exercise_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="@color/background"
        android:textColorHint="@color/gray_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enter_exercise_name">
        <AutoCompleteTextView
            android:id="@+id/name"
            style="@style/Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/exercise" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/exercise_name_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/star_required"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="@id/input_exercise_name"
        app:layout_constraintRight_toLeftOf="@id/input_exercise_name"
        app:layout_constraintTop_toTopOf="@id/input_exercise_name" />

    <TextView
        android:id="@+id/exercise_category_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/star_required"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="@id/category_text_view"
        app:layout_constraintRight_toLeftOf="@id/category_text_view"
        app:layout_constraintTop_toTopOf="@id/category_text_view" />

    <TextView
        android:id="@+id/category_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/input_exercise_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="10dp"
        android:paddingHorizontal="4dp"
        android:layout_marginTop="@dimen/dimens_16dp"
        android:text="@string/category"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/black"
        />

    <Spinner
        android:id="@+id/exercise_type_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/exercise_types"
        app:layout_constraintTop_toTopOf="@id/category_text_view"
        app:layout_constraintBottom_toBottomOf="@id/category_text_view"
        app:layout_constraintStart_toEndOf="@id/category_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_outline"
        android:layout_margin="@dimen/dimens_8dp"
        android:textAlignment="center"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/decrease_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_baseline_remove_24"
        android:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/level_value"
        app:layout_constraintTop_toBottomOf="@id/category_text_view"
        android:contentDescription="@string/increase_difficulty_button"
        android:layout_marginVertical="@dimen/dimens_8dp"
        android:theme="@style/AppTheme"
        android:padding="4dp"
        />

    <Spinner
        android:id="@+id/level_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/levels_dummy"
        app:layout_constraintTop_toTopOf="@id/increase_level"
        app:layout_constraintBottom_toBottomOf="@id/increase_level"
        app:layout_constraintStart_toEndOf="@id/decrease_level"
        app:layout_constraintEnd_toStartOf="@id/increase_level"
        android:background="@drawable/rounded_outline"
        android:layout_margin="@dimen/dimens_8dp"
        android:textAlignment="center"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/increase_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:src="@drawable/ic_add_black_24dp"
        app:layout_constraintStart_toEndOf="@id/level_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_text_view"
        android:contentDescription="@string/decrease_difficulty_button"
        android:layout_marginVertical="@dimen/dimens_8dp"
        android:theme="@style/AppTheme"
        android:padding="4dp"
        />


    <TextView
        android:id="@+id/parameters_list_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/increase_level"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/parameters_list"
        android:textColor="@color/black"
        android:textSize="28sp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/parameters_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/parameters_list_label"
        app:layout_constraintBottom_toTopOf="@id/next_step_card"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_outline"
        android:padding="@dimen/dimens_8dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_parameter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/parameters_recycler"
        app:layout_constraintEnd_toEndOf="@id/parameters_recycler"
        android:backgroundTint="@color/light_blue"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_add_black_24dp"
        style="@style/RoundedCornerButton"
        android:layout_margin="16dp"
        android:contentDescription="@string/add_new_parameter" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/next_step_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="@color/gray_4"
        app:strokeWidth="1dp"
        app:cardCornerRadius="@dimen/dimens_16dp"
        android:theme="@style/AppTheme"
        android:clickable="true"
        >

    <TextView
        android:id="@+id/next_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_25"
        android:drawableEnd="@drawable/ic_chevron_right"
        android:layout_marginHorizontal="@dimen/dimens_16dp"
        android:layout_marginVertical="@dimen/dimens_4dp"
        />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>